%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 ft=erlang et

%% Check required ERTS or OTP release version
{require_otp_vsn, "R16|17|18"}.

%% Enable validation of the OTP app module list. Default is 'true'
{validate_app_modules, true}.

%% Compiler options
{erl_opts, [{parse_transform, lager_transform}]}.

%% == Dependencies ==
{deps, [%% External - Tools
        {lager, ".*",
         {git, "git://github.com/hibari/lager.git", {branch, "dev"}}},

        %% Tools
        {gmt_util, ".*",
         {git, "git://github.com/hibari/gmt-util.git", {branch, "dev"}}},
        {cluster_info, ".*",
         {git, "git://github.com/hibari/cluster-info.git", {branch, "dev"}}},
        {congestion_watcher, ".*",
         {git, "git://github.com/hibari/congestion-watcher.git", {branch, "dev"}}},
        {partition_detector, ".*",
         {git, "git://github.com/hibari/partition-detector.git", {branch, "dev"}}},

        %% UBF
        {pmod_transform, ".*",
         {git, "git://github.com/hibari/pmod_transform.git", {branch, "dev"}}},
        {ubf, ".*",
         {git, "git://github.com/hibari/ubf.git", {branch, "dev"}}},

        %% Thrift
        {thrift, ".*",
         {git, "git://github.com/hibari/thrift-erl.git", {branch, "dev"}}},

        %% Hibari
        {gdss_brick, ".*",
         {git, "git://github.com/hibari/gdss-brick.git", {branch, "dev"}}},
        {gdss_client, ".*",
         {git, "git://github.com/hibari/gdss-client.git", {branch, "dev"}}},
        {gdss_admin, ".*",
         {git, "git://github.com/hibari/gdss-admin.git", {branch, "dev"}}},

        %% Hibari - UBF and Thrift Support
        {gdss_ubf_proto, ".*",
         {git, "git://github.com/hibari/gdss-ubf-proto.git", {branch, "hibari-gh54-thrift-api"}}},
        {gdss_thrift_proto, ".*",
         {git, "git://github.com/hibari/gdss-thrift-proto.git", {branch, "hibari-gh54-thrift-api"}}},

        %% External -Testing
        {qc, ".*",
         {git, "git://github.com/hibari/qc.git", {branch, "dev"}}}
       ]}.
